@{
	ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
	
	<div class="col-8">

		<h1 class="text-center"> Welcome to Cars Market</h1>

		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100" src="@String.Format($"data:image/png;base64,{Convert.ToBase64String(ViewBag.FirstCar.Picture)}")" alt="First slide" width="250" height="500">
					<div class="carousel-caption d-flex justify-content-center">
						<div class="col-4">
							<a href="Details/Details?carId=@ViewBag.FirstCar.Id">
							<h5 class="alert alert-secondary">@ViewBag.FirstCar.Make @ViewBag.FirstCar.Model</h5>
							</a>
							<h4 class="alert alert-success">@ViewBag.FirstCar.Money $</h4>
						</div>
					</div>
				</div>
				@{
					foreach (var car in ViewBag.LeftCars)
					{
						<div class="carousel-item">
							<img class="d-block w-100" src="@String.Format($"data:image/png;base64,{Convert.ToBase64String(car.Picture)}")" alt="Second slide" width="250" height="500">
							<div class="carousel-caption d-flex justify-content-center">
								<div class="col-4">
									<a href="Details/Details?carId=@car.Id">
										<h5  class="alert alert-secondary">
											@car.Make @car.Model
										</h5>
									</a>

									<h4 class="alert alert-success">@car.Money $</h4>
								</div>

							</div>
						</div>
					}
				}

			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
</div>

