@{
	ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
	
	<div class="col-8">

		<h1 class="text-center"> Welcome to Cars Market</h1>
		@{
			if(ViewBag.FirstCar != null &&  ViewBag.LeftCars != null)
			{
				<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100" src="@String.Format($"data:image/png;base64,{Convert.ToBase64String(ViewBag.FirstCar.MainPicture)}")" alt="First slide" width="250" height="600">
					<div class="carousel-caption d-flex justify-content-center">
						<div class="col-4">
							<a type="button" href="Details/Details?carId=@ViewBag.FirstCar.Id" class="btn btn-block bg-gradient-secondary">More Details</a>
						</div>
					</div>
				</div>
				@{
					foreach (var car in ViewBag.LeftCars)
					{
						<div class="carousel-item">
							<img class="d-block w-100" src="@String.Format($"data:image/png;base64,{Convert.ToBase64String(car.MainPicture)}")" alt="Second slide" width="250" height="600">
							<div class="carousel-caption d-flex justify-content-center">
								<div class="col-4">
									<a href="Details/Details?carId=@car.Id">
										<p class="btn btn-block bg-gradient-secondary">
											More Details
										</p>
									</a>
								</div>

							</div>
						</div>
					}
				}

			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>

			}
		}

	</div>
</div>

