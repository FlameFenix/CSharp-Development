@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
	ViewData["Title"] = "Index";
}

<section class="content">
	<div class="card">
		<div class="card-body row col-12 justify-content-center">
			<h1>List of Roles</h1>
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<td>Id</td>
						<td>Name</td>
					</tr>
				</thead>
				<tbody>
					@foreach (var role in Model.OrderBy(x => x.Name))
					{
						<tr>
							<td>@role.Id</td>
							<td>@role.Name</td>
							<td><a href="Delete?roleId=@role.Id" type="button" class="btn btn-danger">Delete</a></td>
						</tr>
					}
				</tbody>
			</table>

		</div>
	</div>
</section>

